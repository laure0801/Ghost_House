
<div class ="card-container">
<ul class="cards">
<% @offers.first(limit).each do | offer | %>
  <li>
  <%= link_to offer_path(offer), :class => "card" do %>
      <%# <%= cl_image_tag offer.photos.first.key, crop: :fill, :class => "card__image" %> %>
      <%= image_tag "ghostlogo.png", :class => "card__image" %>
      <div class="card__overlay">
        <div class="card__header">
          <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
          <div class="card__header-text">
            <h3 class="card__title"><%= offer.title %></h3>
          </div>
        </div>
        <p class="card__description"><%= offer.description %></p>
      </div>
    <% end %>
  </li>
<% end %>
</ul>
</div>
