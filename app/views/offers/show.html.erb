<div class ="container">
<div class="card-trip">
  <% @offer.photos.each do |photo| %>
  <%= cl_image_tag photo.key, crop: :fill %>
  <% end %>
  <div class="card-trip-infos">
    <div class="details">
      <div>
        <h1><%= @offer.title %></h1>
        <p>description : <%=@offer.description %></p>
      </div>
    </div>
    <div class="links">
    <h2 class="card-trip-pricing">price :<%= @offer.price %></h2>
      <%= link_to "Edit this offer", edit_offer_path(@offer) %>
      <%= link_to "detete this offer", offer_path(@offer), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this list?" } %>
      <%= link_to "Reservation", new_offer_reservation_path(@offer) %>
      <br>
      <%= link_to "Back to offers", offers_path%>
    </div>
  </div>
</div>
</div>
