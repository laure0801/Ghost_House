<div class ="container">
<div class="card-trip">
    <% @offer.photos.each do |photo| %>
  <%= cl_image_tag photo.key, crop: :fill %>
  <% end %>
  <div class="card-trip-infos">
    <div class="details">
        <h1><%= @offer.title %></h1>
        <p>Host : <%= @offer.user.first_name %> <%= @offer.user.last_name %></p>
        <p>Address : <%= @offer.address %></p>
        <p><%=@offer.description %></p>
    </div>
    <div class="links">
    <div class="price"><h2 class="card-trip-pricing"><%= @offer.price %>Â£</h2></div>
      <%= link_to "Edit this offer", edit_offer_path(@offer), class: "purple-btn btn-lg btn-block" %>
      <%= link_to "Delete this offer", offer_path(@offer), method: :delete, class: "purple-btn  btn-lg btn-block", data: { confirm: "Are you sure you want to delete this list?" } %>
      <%= link_to "Reservation", new_offer_reservation_path(@offer), class: "purple-btn  btn-lg btn-block" %>
      <br>
      <br>
      <br>
      <%= link_to "Back to offers", offers_path, class: "purple-btn  btn-lg btn-block"%>
    </div>
  </div>
<div id="map"
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
</div>
