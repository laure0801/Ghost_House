<div class="navbar navbar-expand-sm sticky-top ">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "ghostlogo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Offers", offers_path , class: "nav-link" %>
      </li>
    </ul>
  </div>

  <div class="searchbar">
  <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>

  <div>
    <% if user_signed_in? %>
    <li class="nav-item dropdown">
      <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "profile", profile_path, class: "nav-link blacktext" %>
        <%= link_to "log out", destroy_user_session_path, method: :delete, class: "nav-link blacktext" %>
      </div>
    </li>
    <% else %>
    <li class="nav-link">
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </li>
    <% end %>
  </div>
</div>
