<div class="navbar navbar-expand-sm sticky-top ">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "ghostlogo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Offers", offers_path , class: "nav-link" %>
      </li>
    </ul>
  </div>

  <div class="searchbar">
    <%= form_for :search_by_title_and_address, :class => "d-flex", :url => {:controller => 'offers', :action => 'index'}, :html => {:method => 'get'} do |f| %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a haunted house"
      %>
      <%= submit_tag "Search", class: "purple-btn" %>
    <% end %>
  </div>

  <div>
    <% if user_signed_in? %>
    <li class="nav-item dropdown">
      <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "profile", profile_path, class: "nav-link blacktext" %>
        <%= link_to "log out", destroy_user_session_path, method: :delete, class: "nav-link blacktext" %>
      </div>
    </li>
    <% else %>
    <li class="nav-link">
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </li>
    <% end %>
  </div>
</div>
